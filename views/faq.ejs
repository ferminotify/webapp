        <script>
            // new logic with get /status endpoint
            document.addEventListener('DOMContentLoaded', () => {
                var urlList = [];

                document.querySelectorAll('.domain').forEach(domain => {
                    var url = domain.querySelector('span').innerText;
                    urlList.push(url);
                });

                // send get request to /status endpoint
                urlList.forEach(url => {
                    fetch(`https://${url}/status`)
                        .then(response => {
                            if (response.ok) setStatus(`${url.replace(/\./g, '-')}`, 'active');
                            else setStatus(`${url.replace(/\./g, '-')}`, 'inactive');
                        })
                        .catch(error => {
                            // if req blocked by CORS, set as inactive
                            if (error.name === 'TypeError') {
                                setStatus(`${url.replace(/\./g, '-')}`, 'inactive');
                                return;
                            }
                            setStatus(`${url.replace(/\./g, '-')}`, 'na');
                        });
                });


                // check service
                $.get('//status.fn.lkev.in/notifier/get/status', function(response){
                    // response is a json with status 
                    if(response.status == 'error') setStatus('service-notifier', 'inactive');
                    else setStatus('service-notifier', 'active');
                }).fail(function(){
                    setStatus('service-notifier', 'na');
                });
                $.get('//status.fn.lkev.in/notifier/get/status?backup=true', function(response){
                    // response is a json with status 
                    if(response.status == 'error') setStatus('service-notifier-backup', 'inactive');
                    else if(response.status == 'idle') setStatus('service-notifier-backup', 'idle');
                    else setStatus('service-notifier-backup', 'active');
                }).fail(function(){
                    setStatus('service-notifier-backup', 'na');
                });
                    
            });

            function setStatus(id, status){
                document.getElementById(id).classList.remove('verifying');
                document.getElementById(id).classList.add(status);
                switch(status){
                    case 'active':
                        document.getElementById(id).setAttribute('title', 'Online');
                        break;
                    case 'inactive':
                        document.getElementById(id).setAttribute('title', 'Offline');
                        break;
                    case 'idle':
                        document.getElementById(id).setAttribute('title', 'Idle');
                        break;
                    default:
                        document.getElementById(id).setAttribute('title', 'Errore sconosciuto');
                        break;
                }
            }
        </script>

