        <script>
            // 100% mon codé (https://codepen.io/JulienBorgeon/pen/WNqevgg) (vive la revolution!)

            // Récupère l'élément tooltip à partir de son ID
            const tooltip = document.getElementById('tooltip');

            // Vérifie si l'élément tooltip existe
            if (tooltip) {
            // Variables pour suivre les coordonnées de la souris et du tooltip
            let mouseX = 0;
            let mouseY = 0;
            let tooltipX = 0;
            let tooltipY = 0;

            // Fonction pour mettre à jour la position du tooltip avec un décalage fluide
            function updateTooltipPosition() {
                // Interpolation pour mouvement fluide
                tooltipX += (mouseX - tooltipX) * 0.17;
                tooltipY += (mouseY - tooltipY) * 0.17;

                // Met à jour les styles de position du tooltip
                tooltip.style.top = tooltipY + 'px';
                tooltip.style.left = tooltipX + 'px';

                // Demande au navigateur d'appeler cette fonction avant le prochain repaint
                requestAnimationFrame(updateTooltipPosition);
            }

            // Lance la mise à jour continue de la position du tooltip
            requestAnimationFrame(updateTooltipPosition);

            // Événement pour gérer le survol de la souris sur un élément avec un attribut title
            document.addEventListener('mouseover', function(e) {
                if (e.target.hasAttribute('title')) {
                // Récupère la valeur de l'attribut title
                const title = e.target.getAttribute('title');
                // Stocke la valeur de title dans un nouvel attribut data-original-title
                e.target.setAttribute('data-original-title', title);
                // Supprime l'attribut title pour éviter l'info-bulle par défaut du navigateur
                e.target.removeAttribute('title');
                }
            });

            // Événement pour gérer le déplacement de la souris sur la page
            document.addEventListener('mousemove', function(e) {
                // Met à jour les coordonnées de la souris avec un léger décalage
                //mouseX = e.clientX + 12; // Ajuster la valeur ici pour la distance horizontale
                mouseY = e.clientY + window.scrollY - 30; // Ajuster la valeur ici pour la distance verticale
                mouseX = e.clientX - 85; // boh je m'appelle Kevin

                // Vérifie si l'élément sous la souris possède un attribut data-original-title
                if (e.target.hasAttribute('data-original-title')) {
                // Récupère la valeur de l'attribut data-original-title
                const title = e.target.getAttribute('data-original-title');
                // Affiche le contenu de data-original-title dans le tooltip
                tooltip.innerHTML = title;
                // Rend le tooltip visible
                tooltip.classList.remove('invisible');
                } else {
                // Cache le tooltip si l'élément sous la souris n'a pas data-original-title
                tooltip.classList.add('invisible');
                }
            });

            // Événement pour gérer la sortie de la souris d'un élément
            document.addEventListener('mouseout', function(e) {
                if (e.target.hasAttribute('data-original-title')) {
                // Récupère la valeur de data-original-title
                const title = e.target.getAttribute('data-original-title');
                // Restaure l'attribut title avec la valeur originale
                e.target.setAttribute('title', title);
                // Supprime l'attribut data-original-title
                e.target.removeAttribute('data-original-title');
                }
                // Cache le tooltip lorsque la souris quitte l'élément
                tooltip.classList.add('invisible');
            });
            } else {
                console.error('Aucun élément Tooltip ciblé. Enjambement!');
            }
        </script>

        
