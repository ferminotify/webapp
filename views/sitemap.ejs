										<li><a href="/CercaEventi">Cerca Eventi</a></li>
									</ul>
								</section>
							</div>
						</div>

						<div class="rounded-container">
							<div class="rounded inner">
								<section class="section">
									<h3>Vari</h3>
									<ul class="section-list">
										<li><a href="/faq">FAQ</a></li>
										<li><a href="/credits">Chi siamo</a></li>
										<li><a href="/faq?page=privacy">Privacy Policy</a></li>
									</ul>
								</section>
							</div>
						</div>

						<div class="rounded-container">
							<div class="rounded inner">
								<section class="section">
									<h3>Contattaci</h3>
