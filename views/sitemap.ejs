    <title>Sitemap · Fermi Notify</title>

	<style>
		.main-container{
			padding-left: 0;
		}

		#sitemap-header{
			background: radial-gradient(50% 123.47% at 50% 50%, #00FF94 0%, #720059 100%), linear-gradient(121.28deg, #669600 0%, #FF0000 100%), linear-gradient(360deg, #0029FF 0%, #8FFF00 100%), radial-gradient(100% 164.72% at 100% 100%, #6100FF 0%, #00FF57 100%), radial-gradient(100% 148.07% at 0% 0%, #FFF500 0%, #51D500 100%);
			background-blend-mode: screen, color-dodge, overlay, difference, normal;
			color: #e3e3e3;
		}

		.sitemap{
			column-count: 3;
			column-gap: 15px;
		}

		.list{
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
			color: #1d1d1f;
		}

		.sitemap .section{
			font-size: 17px;
			display: inline-block;
			vertical-align: top;
			-webkit-column-span: 1;
			-moz-column-span: 1;
			column-span: 1;
			padding: 0 20px;
			width: fit-content;
		}

		.sitemap .section h3{
			padding-bottom: 7px;
			line-height: 1.47059;
			font-weight: 600;
			letter-spacing: -.022em;
			margin: 0;
			font-size: 17px;
			width: fit-content;
		}

		.sitemap .rounded-container{
			margin-bottom: 15px;
		}

		.section-list{
			list-style-type: none;
			margin: 0;
			padding: 0;
		}

		ul.section-list{
			list-style: none;
			width: fit-content
		}

		.section-list li{
			padding-bottom: 7px;
			width: fit-content;
		}

		.section-list li a{
			color: var(--on-surface-primary);
		}

		.section-list li a:hover{
			text-decoration: underline;
		}

		.rounded-container:not(#sitemap-header) {
			transition: scale 0.2s ease-in-out;
		}

		.rounded-container:not(#sitemap-header):hover {
			scale: 1.04;
		}

		@media screen and (max-width: 970px) {
			.sitemap {
				column-count: 2;
			}
		}

		@media screen and (max-width: 640px) {
			.sitemap {
				column-count: 1;
			}
		}
	</style>

</head>
<body>

	<div class="main-container">
        <div class="main">
			<div class="section">
				
				<div class="rounded-container" id="sitemap-header">
					<div class="rounded-inner">
						<h1 class="firstTitle">Sitemap</h1>
					</div>
				</div>

				<div class="sitemap">

						<div class="rounded-container">
							<div class="rounded inner">
								<section class="section">
